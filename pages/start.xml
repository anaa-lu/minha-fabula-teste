<page id="start" bg_color="lightblue" bg_music="osts-vilo.mp3">
  <fab-if when="$contador = 0">
    <agent
      id="teste"
      image="snow-sign-1.png"
      color="white"
      x="center"
      y="center"
      width="250" />
    <agent
      id="textinho"
      text="clique aqui pra limpar a neve"
      x="center"
      y="center"
      on_click="set(contador,$contador+1)" />
  </fab-if>
  <fab-if when="$contador = 1">
    <agent
      id="placa-clicada"
      image="forest-sign-1.png"
      x="center"
      y="center"
      width="250" />
    <agent
      id="texto-clicado"
      text="neve removida com sucesso"
      x="center"
      y="center" 
      color="white" />
    <agent 
      id="pensamento-ruim"
      text="não tenho certeza se ta limpo, deixa eu conferir de novo"
      color="black"
      x="50"
      y="30"/>
    <agent
      id="ação-ruim"
      text="clique aqui pra limpar de novo"
      color="red"
      x="300" 
      y="200"
      on_click="set(contador,$contador+1)"/>
  </fab-if>
  <fab-if when="$contador = 2">
    
</page>